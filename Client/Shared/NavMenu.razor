<div class="top-row pl-5 navbar navbar-dark">
    <a class="navbar-brand" href="">Zoológico Blazor</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/animal/cadastro">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Cadastro de Animal
            </NavLink>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/animal/list" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span>Lista de Animais
                    </NavLink>
                </li>
            </ul>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/cuidador/cadastro">
                <span class="oi oi-person" aria-hidden="true"></span> Cadastro do Cuidador
            </NavLink>
            <ul class="nav flex-column">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/cuidador/list" Match=@NavLinkMatch.All>
                        <span class="oi oi-plus" aria-hidden="true"></span>Lista dos Cuidadores
                    </NavLink>
                </li>
            </ul>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/cuidadoranimal/cadastro">
                <span class="oi oi-person" aria-hidden="true"></span> Cuidador Animais
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
